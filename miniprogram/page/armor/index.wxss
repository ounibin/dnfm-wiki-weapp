.armor-box {
  width: 100%;
  height: 100%;
  display: flex;
}

.side-container {
  flex: 1;
}

.collapse-box {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  /* 创建 5 列等宽的布局 */
  gap: 10rpx;
  /* 列之间的间距 */
  padding: 30rpx;
  background-color: blue;
}

.armor-item {
  background-color: red;
  color: var(--orange);
  /* width: 100rpx; */
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.armor-item__icon {}

.armor-item__name {
  font-size: 24rpx;
  line-height: 1;
  text-align: center;
}