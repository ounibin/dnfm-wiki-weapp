
.weapon-box {
  width: 100%;
  height: 100%;
  display: flex;
}

.side-container {
  flex: 1;
}

.collapse-box {
  display: grid;
  grid-template-columns: repeat(5, 1fr); /* 创建 5 列等宽的布局 */
  gap: 10px; /* 列之间的间距 */
}

.weapon-item {
  /* background: var(--bgc); */
  color: var(--orange);
  /* border: 1px solid #C8C9CC; */
  width: 50px;
  /* height: 50px; */
  margin-bottom: 8px;
  font-size: 12px;
  line-height: 1;
  /* display: inline-flex; */
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.weapon-icon {
  display: block;
  width: 50px;
  height: 50px;
  /* margin-right: 4px; */
  margin-bottom: 4px;
}

